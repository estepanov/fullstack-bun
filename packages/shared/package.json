{
  "name": "shared",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "bun build ./index.ts ./interfaces/example.ts ./interfaces/chat.ts --outdir ./dist --splitting --packages external --watch",
