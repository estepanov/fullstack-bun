CORS_ALLOWLISTED_ORIGINS="http://localhost:5173,http://localhost:5175"
PORT="3001"
NODE_ENV="development"

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mydatabase"

# Redis 
REDIS_URL="redis://:redispassword@redis:6379"

# Better Auth (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-here"
API_BASE_URL="http://localhost:3001"
FE_BASE_URL="http://localhost:5173"

# Email (SMTP) - for email verification
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Fullstack Bun <noreply@example.com>"

# OAuth (Optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Horizontal Scaling (API) (Optional)
# Enable distributed chat mode for running multiple API instances
# Default: true (enabled for horizontal scaling)
ENABLE_DISTRIBUTED_CHAT=true
# Optional: Set a custom instance ID for better observability
# If not set, a unique ID will be auto-generated (api-<uuid>)
# In Kubernetes, you can use the pod name: INSTANCE_ID=$(HOSTNAME)
INSTANCE_ID=