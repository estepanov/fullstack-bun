{
  "name": "api",
  "scripts": {
    "dev": "bun run --watch src/index.ts ",
    "start": "bun src/index.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "bun run biome format --write ./src",
    "lint": "bun run biome lint ./src",
    "test": "bun test --preload ./test/mocks/env.ts --preload ./test/mocks/redis.ts --preload ./test/mocks/db.ts",
    "test:coverage": "bun test --coverage --preload ./test/mocks/env.ts --preload ./test/mocks/redis.ts --preload ./test/mocks/db.ts",
    "clean": "rm -rf node_modules types"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.9",
    "@t3-oss/env-core": "^0.13.10",
    "@types/escape-html": "^1.0.4",
    "auth-email-security": "workspace:*",
    "better-auth": "^1.4.9",
    "better-auth-harmony": "^1.2.5",
    "drizzle-orm": "^0.45.1",
    "escape-html": "^1.0.3",
    "hono": "^4.7.4",
    "hono-rate-limiter": "^0.5.3",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.11",
    "pino": "^9.6.0",
    "postgres": "^3.4.7",
    "rate-limit-redis": "^4.3.1",
    "shared": "workspace:*",
    "uuid": "^11.1.0",
    "validation-better-auth": "^1.3.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "@types/nodemailer": "^7.0.4",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.0.0"
  }
}
